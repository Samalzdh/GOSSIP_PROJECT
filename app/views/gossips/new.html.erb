<style>
  .items-align-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh; /* Optionally, you can set a minimum height to center vertically. */
  }
  .titre{
    font-size:3em;
    font-family: Copperplate, Papyrus, fantasy;
    
  }
</style>


<div class="items-align-center" >
  <h1 class="titre" >Créer un nouveau gossip</h1>
  <div class="container m-5" >
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header bg-dark text-white"><i class="fa fa-envelope"></i> balance to potin </div>
            <div class="card-body">
              <form>
                <div class="form-group">
                  <label for="name">Titre</label>
                  <div>
                    <%= text_field_tag 'title', @gossip.title, class: 'form-control', placeholder: 'Entre 3 et 24 caractères', required: true %> 
                  </div>      
                </div>
                <div class="form-group">
                  <label for="message">Potin</label>
                  <div>
                    <%= text_area_tag 'content', @gossip.content, class: 'form-control', rows: 6, required: true %>
                  </div>
                </div>
                <div class="mx-auto">
                  <%= submit_tag "C'est parti...", class: "btn btn-dark m-2"%>
                </div>
              </form>
            </div>
          </div>
        </div>    
      </div>
    <% end %>
  </div>
</div>