<div class="jumbotron p-3 p-md-5 text-white bg-dark text-center">
  <div class="d-flex justify-content-center align-items-center">
    <h1 class="display-4">Gossip n°<%= params[:id] %></h1>
    <!-- Votre contenu jumbotron ici -->
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic"><%= @gossip.title %></h1>
    <h2 class="display-4 font-italic"> Auteur : <%= @gossip.user.first_name %> </h2>
    <p class="lead my-3">
      <%= @gossip.content %><br>
      Crée le : <%= @gossip.created_at.strftime("%d/%m/%Y à %H:%M") %>
    </p>
  <%= button_to "Modifier", edit_gossip_path, class: "btn btn-info m-1" %>
  <%= button_to "Supprimer le gossip", gossip_path,data: { confirm: "Etes vous sur?"}, method: :delete, class: "btn btn-danger m-1" %>
  </div>
</div>