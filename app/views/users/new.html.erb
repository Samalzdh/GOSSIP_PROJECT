<div class="container">
    <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p >We failed to create the gossip for the following reason(s) :</p>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Devenir un Gossipeur</h1>
  <div>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <div><%= label_tag 'Quel est ton prénom ?' %></div>
        <div><%= text_field_tag 'first_name', @user.first_name, class: "form-control" ,required: true %><br></div>

        <div><%= label_tag 'Quel est ton nom ?' %></div>
        <div><%= text_field_tag 'last_name', @user.last_name, class: "form-control" ,required: true %><br></div>

        <div><%= label_tag 'Quel est ton âge ?' %></div>
        <div><%= text_field_tag 'age', @user.age, class: "form-control" ,required: true %><br></div>

        <div><%= label_tag 'Quelle est ta ville ? :' %></div>
        <div><%= select_tag 'city', options_from_collection_for_select(City.all, "id", "name",@user.city) , class: "form-control" %><br></div>

        <div><%= label_tag 'Décris-toi en quelques mots :' %></div>
        <div><%= text_area_tag 'description', @user.description, class: "form-control"  %><br></div>

        <div><%= label_tag 'Donne-nous un email :' %></div>
        <div><%= text_field_tag 'email', @user.email, class: "form-control",required: true %><br></div>

        <div><%= label_tag 'Choisis ton mot de passe :' %></div>
        <div><%= text_field_tag 'password', @user.password, class: "form-control",required: true %><br>
          <div class="invalid-feedback">
            Please enter a valid password (at least 6 characters).
          </div>
        </div>
        <%= submit_tag "Valider", class: "btn btn-secondary m-1"%>       
    <% end %>
    <br> 
  </div>
</div>